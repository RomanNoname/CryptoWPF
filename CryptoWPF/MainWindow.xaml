<Window x:Class="CryptoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
           
            <RowDefinition Height="4*"/>
          
        </Grid.RowDefinitions>

        <Button Content="Top-10" Click="LoadTopCoinsPage" Width="100" Height="30" Background="LightBlue" Foreground="White" BorderBrush="DarkBlue" BorderThickness="2" Margin="25,24,549,24" />
        <Button Content="Search" Click="LoadSearchCoinPage" Width="100" Height="30" Background="LightBlue" Foreground="White" BorderBrush="DarkBlue" BorderThickness="2" Margin="150,24,424,24" />

        <Frame x:Name="MainFrame" Background="AliceBlue" Grid.Row="1" Margin="10,40,10,10" />
    </Grid>
</Window>
